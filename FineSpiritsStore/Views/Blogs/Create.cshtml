@model FineSpiritsStore.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlogTitle" class="control-label">Title</label>
                <textarea asp-for="BlogTitle" rows="1" cols="50"> </textarea>
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogCategory" class="control-label">Category</label>
                <textarea asp-for="BlogCategory" rows="1" cols="50"> </textarea>
                <span asp-validation-for="BlogCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogBody" class="control-label">Message</label>
                <textarea asp-for="BlogBody" rows="4" cols="50"> </textarea>
                <span asp-validation-for="BlogBody" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
