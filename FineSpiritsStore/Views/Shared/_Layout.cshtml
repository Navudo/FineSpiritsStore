<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <title>FineSpiritsStore</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <a class="navbar-brand" href="#">
            FINE SPIRITS STORE
        </a>
            <ul class="navbar-nav ml-auto my-2 my-lg-0">
                <a asp-action="index" asp-controller="blogs">Blog</a> 
                <a asp-action="List" asp-controller="Product">Product</a>
            </ul>
       
        
        </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
