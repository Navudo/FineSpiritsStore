@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>

            </span>



        </h4>
    </div>

    <div>
            <div style="display:inline">
            <span class="badge badge-info badge-primary" style="margin-right:3px">
                <medium>
                    Category:<p style="display:inline"> @Model.Category    </p>
                </medium>

            </span>
        </div>


        <div style="display:inline">
            <span class="badge badge-info badge-primary" style="margin-right:3px">
                <medium>                
                    Brand:<p style="display:inline"> @Model.Brand    </p>
                </medium>

            </span>
        </div>

        <div style="display:inline">
            <span class="badge badge-info badge-primary" style="margin-right:3px">
                <medium>
                    Size(ML):<p style="display:inline"> @Model.Size.ToString() </p>
                </medium>

            </span>
        </div>

        <div style="display:inline">
            <span class="badge badge-info badge-primary"style="margin-right:3px">
                <medium>
                    Country:<p style="display:inline">  @Model.Country  </p>
                </medium>

            </span>
        </div>

    </div>
    <div class="card-text p-1">@Model.Description</div>
</div>
